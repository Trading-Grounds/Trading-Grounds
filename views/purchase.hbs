{{> dashboardheader}}

<body class="page-background" id="dashboard">

    <header>
        <h1>Purchase Stock</h1>
    </header>

    {{> sidenav}}

    <!--Main Content-->
    <main id="main-area">
        <!--Main Card-->
        <div id="main-card" class="card-panel z-depth-5">



            <!--Stock View-->
            <section>
                <div class="container">
                    <div class="row center-align">
                        <div class="col l12 m12 s12">

                            <div class="row">
                                <div class="col s12 m12 l12">

                                    <div class="card">
                                        <div class="card-content white-text">
                                        <div id="message-display"></div>
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="company-name">
                                                        <h4 id="name" data-name="{{name}}">
                                                            {{name}}
                                                        </h4>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="card-title">
                                                        <h1 id="symbol" data-symbol="{{symbol}}">
                                                            {{symbol}}
                                                        </h1>
                                                    </span>
                                                    <span class="share-price">
                                                        <h3 id="price" data-price="{{priceUnformatted}}">
                                                            {{price}}
                                                        </h3>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s4 m4 l4">

                                                </div>
                                                <div class="col s4 m4 l4">
                                                    <span class="share-qty">
                                                        <div class="input-field">
                                                            <input id="shares" class="quantity-input" type="number" value="1">
                                                        </div>
                                                    </span>
                                                </div>
                                                <div class="col s4 m4 l4">

                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="total-purchase">
                                                        <h3 id="total">
                                                            {{price}}
                                                        </h3>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-action">
                                            <span id="purchase" class="waves-effect waves-light btn-large green accent-4 buy-button" data-price="{{priceUnformatted}}">
                                                PURCHASE
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </main>

    {{> footer}}